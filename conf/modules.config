if (params.mode=="normalizer") {
    process {
        withLabel: 'process_high' { container = "quay.io/mondrianscwgs/alignment:v0.0.93" }
        withLabel: 'process_med' { container = "quay.io/mondrianscwgs/alignment:v0.0.93" }
        withLabel: 'process_low' { container = "quay.io/mondrianscwgs/alignment:v0.0.93" }
        withName: 'NORMALIZERQCMETADATA|NORMALIZERMETADATA|SEPARATETUMORANDNORMALBAMS|ANEUPLOIDYHEATMAP|IDENTIFYNORMALS' {
            publishDir = [
                path: { "${params.output_dir}/" },
                mode: 'copy'
            ]
        }
    }
}



if (params.mode=="breakpoint") {
    process {
        withLabel: 'process_high' { container = "quay.io/mondrianscwgs/breakpoint_calling:v0.0.93" }
        withLabel: 'process_med' { container = "quay.io/mondrianscwgs/breakpoint_calling:v0.0.93" }
        withLabel: 'process_low' { container = "quay.io/mondrianscwgs/breakpoint_calling:v0.0.93" }
        withName: 'BREAKPOINTMETADATA|EXTRACTSOMATIC|EXTRACTCOUNTS|DESTRUCT_TO_VCF|LUMPYEXPRESS|GRIDSS|SVABA|CSVERVEREMOVEDUPLICATES' {
            publishDir = [
                path: { "${params.output_dir}/" },
                mode: 'copy'
            ]
        }
        withName: 'DESTRUCT' {
            publishDir = [
                path: { "${params.output_dir}/" },
                mode: 'copy',
                pattern: '*read_table.csv*'
            ]
        }
    }
}


if (params.mode=="variant") {
    process {
        withLabel: 'process_high' { container = "quay.io/mondrianscwgs/variant_calling:v0.0.93" }
        withLabel: 'process_med' { container = "quay.io/mondrianscwgs/variant_calling:v0.0.93" }
        withLabel: 'process_low' { container = "quay.io/mondrianscwgs/variant_calling:v0.0.93" }
        withName: 'VCF2MAF|VARIANTCONSENSUS|REHEADER_MUSEQ|FILTERALIGNMENTARTIFACTS|REHEADER_STRELKA_SNV|REHEADER_STRELKA_INDEL|VARIANTMETADATA' {
            publishDir = [
                path: { "${params.output_dir}/" },
                mode: 'copy',
                pattern: '*'
            ]
        }

    }
}